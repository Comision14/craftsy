<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{
    title : 'Detalle del producto'
})  %> 

<body class="detail">
    <%- include('./partials/header') %> 

    <main class="container mt-4">
        <section class="row">
            <article class="col-12 col-md-10 col-lg-8 mx-auto">
                <div class="card">
                    <div class="row">
                        <div class="col-12 col-md-5 col-lg-5">
                            <div class="card-body">
                                <img src="/images/img-phone-01.jpg" class="img-fluid" alt="...">
                                <div class="d-flex mt-2">
                                    <img style="width: 33.3%;" src="/images/img-phone-01.jpg" alt="...">
                                    <img style="width: 33.3%;" src="/images/img-phone-02.jpg" alt="...">
                                    <img style="width: 33.3%;" src="/images/img-phone-03.jpg" alt="...">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-7 col-lg-7">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <h6>Caractar√≠sticas</h6>  
                                <hr>
                            <ul class="list-group list-group-flush">
                                <% if (product.features) { %>
                                    <% product.features.forEach(feature => { %>
                                        <% if (typeof feature === "boolean") { %>
                                            <% if (feature === true) { %>
                                            <li class="list-group-item">Original</li>
                                            <% }else{ %>
                                                <li class="list-group-item">Alternativo</li>
                                            <% } %>
                                        <% }else{ %>
                                            <li class="list-group-item"><%= feature %></li>
                                        <% } %>
                                    <% }) %>
                                <% }else{ %>
                                <li class="list-group-item">No hay caracteristicas</li>

                                <% } %>
                             
                              </ul>
                            </div>
               
                              <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-end">
                                  <form action="/products/remove/<%= product.id %>?_method=DELETE" method="POST">
                                      <button type="submit" class="btn btn-outline-danger m-1">Eliminar</button>
                                  </form>
                                <a href="/products/edit/<%= product.id %>" class="btn btn-outline-success m-1">Editar</a>
                                <a href="#" class="btn btn-outline-primary m-1">Agregar al carrito</a>
                              </div>
                        </div>
                    </div>

                  </div>
            </article>
        </section>
    </main>
</body>
</html>