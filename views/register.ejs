<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head',{
        title : 'Registro'
    })  %> 


<body class="register">
    <%- include('./partials/header') %> 

    <main>
        <section>
            <h1>Registrate</h1>
            <hr>
            <form method="POST" action="">
                <article>
                <div class="register__form-box">
                    <label for="nombre">Nombre</label>
                    <input class="register__form-input form-control <%= locals.errores && errores.nombre ? 'is-invalid' : null %>" type="text" id="nombre" name="nombre" placeholder="Escribí tu nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>">
                     <span class="register__text-error"><%= locals.errores && errores.nombre ? errores.nombre.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="apellido">Apellido</label>
                    <input class="register__form-input form-control <%= locals.errores && errores.apellido ? 'is-invalid' : null %>" type="text" id="apellido" name="apellido" placeholder="Escribí tu apellido"  value="<%= locals.old && old.apellido ? old.apellido : null %>">
                    <span class="register__text-error"><%= locals.errores && errores.apellido ? errores.apellido.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="email">Email</label>
                    <input class="register__form-input form-control <%= locals.errores && errores.email ? 'is-invalid' : null %>" type="email" id="email" name="email" placeholder="Escribí tu email"  value="<%= locals.old && old.email ? old.email : null %>">
                    <span class="register__text-error"><%= locals.errores && errores.email ? errores.email.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="password">Contraseña</label>
                    <input class="register__form-input form-control <%= locals.errores && errores.password ? 'is-invalid' : null %>" type="password" id="password" name="password" placeholder="Escribí tu contraseña">
                    <span class="register__text-error"><%= locals.errores && errores.password ? errores.password.msg : null %></span>
                </div>
                    <div class="register__form-box">
                        <label for="password">Confirma contraseña</label>
                        <input class="register__form-input form-control <%= locals.errores && errores.password2 ? 'is-invalid' : null %>" type="password" id="password" name="password2" placeholder="Escribí tu contraseña">
                        <span class="register__text-error"><%= locals.errores && errores.password2 ? errores.password2.msg : null %></span>
                    </div>
                        <div class="register__form-box register__center">
                            <input class="" type="checkbox" name="terminos" id="terminos">
                        <label for="terminos">Términos y condiciones</label>
                        <span class="register__text-error"><%= locals.errores && errores.terminos ? errores.terminos.msg : null %></span>

                        </div>
                        <div class="d-flex justify-content-around">
                            <button type="submit">Registrarme</button>
                            <a href="/">
                                <button type="button">Cancelar</button>
                            </a>
                        </div>
 
                     <article>
                      
              
            </form>
        </section>

    </main>

</body>

</html>