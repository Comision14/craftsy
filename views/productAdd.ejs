<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head',{
        title : 'Nuevo producto'
    })  %> 


<body class="register">
    <%- include('./partials/header') %> 

    <main>
        <section>
            <h2>Agregar Producto</h2>
            <hr>
            <form method="POST" action="">
                <article>
                <div class="register__form-box">
                    <label for="name">Nombre del producto</label>
                    <input class="register__form-input" type="text" id="name" name="name">
                </div>
                <div class="register__form-box">
                    <label for="price">Precio</label>
                    <input class="register__form-input" type="number" id="price" name="price">
                </div>
         
                <div class="register__form-box">
                        <label for="category">Categorias</label>
                        <select class="register__form-select" name="category" id="category">
                            <option value="" hidden selected>Selecciona la categor√≠a...</option>
                          <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                          <% }) %>
                        </select>
                </div>
                <div class="register__form-box">
                    <div class="d-flex align-content-center">
                        <div>
                            <label for="origin">Origen</label>
                            <input class="register__form-input" type="text" id="origin" name="features">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="in-box" name="features">
                            <label class="form-check-label" for="in-box">
                              Original
                            </label>
                          </div>
                    </div>
                  
                  
                </div>
                <div class="register__form-box">
                    
                </div>
              
            </article>
               
                <button type="submit">Guardar</button>
              
                    <button type="reset">Limpiar</button>
                </div>
            </form>
        </section>

    </main>

</body>

</html>