<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head',{
        title : 'Editar categoría'
    })  %> 


<body class="register">
    <%- include('./partials/header_admin') %> 

    <main>
        <section>
            <div class="d-flex justify-content-between">
                <h2>Editar Categoría</h2>
                   
            </div>
            <hr>
            <form method="POST" action="/categories/update/<%= category.id %>?_method=PUT" >
                <article>
                    
                <div class="register__form-box">
                    <label for="name">Nombre de la categoría</label>
                    <input class="register__form-input" value="<%= category.name %>"  type="text" id="name" name="name">
                </div>
               
            </article>
               
            <div class="register__form-box d-flex justify-content-end align-items-end">
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
                </div>
            </form>
        </section>

    </main>

</body>

</html>